{
  "expo": {
    "name": "Wanderer",
    "slug": "wanderer",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "wanderer",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Wanderer cần truy cập vị trí để tạo tuyến đường và kích hoạt câu chuyện tại các checkpoint.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Wanderer cần truy cập vị trí để theo dõi hành trình và phát câu chuyện phù hợp.",
        "NSMotionUsageDescription": "Ứng dụng sử dụng cảm biến chuyển động để đếm bước chân."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Wanderer cần truy cập vị trí để tạo tuyến đường và kích hoạt câu chuyện tại các checkpoint."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}